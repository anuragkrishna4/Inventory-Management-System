<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Inventory Management System</display-name>

  <servlet>
    <servlet-name>InventoryAction</servlet-name>
    <servlet-class>com.nisum.InventoryActionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InventoryAction</servlet-name>
    <url-pattern>/api/inventoryAction</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddInventory</servlet-name>
    <servlet-class>com.nisum.AddInventoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddInventory</servlet-name>
    <url-pattern>/api/addInventory</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetInventory</servlet-name>
    <servlet-class>com.nisum.GetInventoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetInventory</servlet-name>
    <url-pattern>/api/getAllInventory</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateInventory</servlet-name>
    <servlet-class>com.nisum.UpdateInventoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateInventory</servlet-name>
    <url-pattern>/api/updateInventory</url-pattern>
  </servlet-mapping>


</web-app>
